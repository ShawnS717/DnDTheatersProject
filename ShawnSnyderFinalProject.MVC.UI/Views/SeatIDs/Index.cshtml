@model IEnumerable<ShawnSnyderFinalPrject.MVC.DATA.SeatID>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Assigned Seating</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Seating ID
        </th>
        <th>
            Theater 
        </th>
        <th>
            Customer Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.SeatID1
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheaterMovy.Theater.TheaterName)
        </td>
        <td>
            @(item.Ticket.UserDetail.FirstName+" "+item.Ticket.UserDetail.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SeatID1 }) |
            @Html.ActionLink("Details", "Details", new { id=item.SeatID1 }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SeatID1 })
        </td>
    </tr>
}

</table>
