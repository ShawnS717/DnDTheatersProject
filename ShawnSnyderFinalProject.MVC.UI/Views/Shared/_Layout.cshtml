<!DOCTYPE html>
<html lang="en">
<head>
    <title>DnD Theaters</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Content/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    @RenderSection("style", false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h3 style="color:white;margin-top:.5em;margin-right:1em">DnD Theaters</h3>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")" class="btn" style="color:white;border:2px solid #aaa;margin:2px;">Home</a></li>
                    <li><a href="@Url.Action("Contact","Home")" class="btn" style="color:white;border:2px solid #aaa;margin:2px;">Contact</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("MyTickets","SeatIDs")" class="btn" style="color:white;border:2px solid #aaa;margin:2px;">My Tickets</a></li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a href="@Url.Action("Index","UsersAdmin")" class="btn" style="color:white;border:2px solid #aaa;margin:2px;">Users (Admin-Only)</a></li>
                        <li><a href="@Url.Action("Index","RolesAdmin")" class="btn" style="color:white;border:2px solid #aaa;margin:2px;">Roles (Admin-Only)</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="management-tab">
            <div class="management-content">
                Management:
                <a href="@Url.Action("Index","Movies")" class="btn btn-default">Movies</a>
                <a href="@Url.Action("Index","Theaters")" class="btn btn-default">Theaters</a>
                <a href="@Url.Action("Index","TheaterMovies")" class="btn btn-default">Scheduled Showings</a>
                <a href="@Url.Action("Index","Showtimes")" class="btn btn-default">Showtimes</a>
                <a href="@Url.Action("Index","SeatIDs")" class="btn btn-default">Assigned Seating</a>
                <a href="@Url.Action("Index","Tickets")" class="btn btn-default">Tickets</a>
            </div>
        </div>
    }
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="container-fluid clearfix" id="main-wrapper" style="padding-top:6em;">
            <main>
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="container-fluid clearfix" id="main-wrapper" style="padding-top:3em;">
            <main>
                @RenderBody()
            </main>
        </div>
    }



    <footer class="container-fluid text-center">
        <div class="footer-left">
            <div>
                Made by: Shawn Snyder
            </div>
            <div>
                Using: Bootstrap, jQuery, Owl Carousel, and more
            </div>
        </div>
        <div class="footer-right">
            <div>
                <a href="https://github.com/firehawk9876/DnDTheatersProject" style="color:white;text-decoration:underline;">The Github For this project</a><br />
                <div>
                    Non managerial functionality designed
                </div>
                <div>
                    with a worst case User in mind
                </div>
                <div>
                    <a href="@Url.Content("~/Content/ShawnSnyderFinalProjectDocumentation.pdf")"target="_blank">Project Documentation</a>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </footer>

    <script src="~/Content/js/jquery-1.11.2.min.js"></script>
    <script src="~/Content/OwlCarousel2-2.3.4/dist/owl.carousel.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
