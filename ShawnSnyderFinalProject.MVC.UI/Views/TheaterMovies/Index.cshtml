@model IEnumerable<ShawnSnyderFinalPrject.MVC.DATA.TheaterMovy>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Movie Showings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Reservation Limit
        </th>
        <th>
            Movie
        </th>
        <th>
            Showtime
        </th>
        <th>
            Theater
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReservationLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movy.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Showtime.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theater.TheaterName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TMID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TMID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TMID })
        </td>
    </tr>
}

</table>
